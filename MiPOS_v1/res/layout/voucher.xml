            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tip"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataTipV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small" />
            <!-- Debe cambiarse por los datos que se reciben del xml que manda backend -->

        </TableRow>

        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/total"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataTotalV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small" />
            <!-- Debe cambiarse por los datos que se reciben del xml que manda backend -->

        </TableRow>

        <TextView android:text="@string/vacio"
             />
    </TableLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:layout_marginTop="25dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/sendVoucher1"
            
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:background="@drawable/tiled_button_blue_background"
            android:onClick="sendVoucher"
            android:text="@string/send_voucher"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/sendVoucher2"
           
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:background="@drawable/tiled_button_arrow_background"
            android:onClick="sendVoucher" />
    </GridLayout>

</LinearLayout>