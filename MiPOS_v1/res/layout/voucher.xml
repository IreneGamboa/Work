<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirmar_compra"
        style="@style/TitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="@string/voucher"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/label1"
        style="@style/TitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/label_voucher"
        android:textColor="#111111"
        android:textSize="@dimen/text_size_small" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/voucher_background" 
        android:layout_marginTop="2.5dp">

        <ImageView
            android:id="@+id/imageVoucher"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/voucher_credomatic_gray_logo"
            android:contentDescription="@string/todo" >
        </ImageView>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/commerce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commerce"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/id_terminal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/id_terminal"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataIdTerminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small" />
            <!-- Debe cambiarse por los datos que se reciben del xml que manda backend -->

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/date"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small" />
            <!-- Debe cambiarse por los datos que se reciben del xml que manda backend -->

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tarjeta"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="@string/tarjeta"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_small" />
            <!-- Debe cambiarse por los datos que se reciben del xml que manda backend -->

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dip" >

            <TextView
