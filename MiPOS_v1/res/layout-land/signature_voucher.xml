<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background_landscape" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signature_pad_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:text="@string/example"
            android:textColor="#111111"
            android:textSize="@dimen/text_size_small" >
        </TextView>

        
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:columnCount="2" >

        <Button
            android:id="@+id/sendVoucher1"
            
            android:layout_width="550dp"
            android:layout_height="32.5dp"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_row="2"
            android:background="@drawable/tiled_button_blue_background_landscape"
            android:onClick="makeSale"
            android:text="@string/example"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/sendVoucher2"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@drawable/tiled_button_arrow_background"
            android:onClick="makeSale" />

        <TextView
            android:id="@+id/ajustePropina"
            android:layout_width="550dp"
            android:layout_height="15dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@drawable/tiled_button_blue_background_top_landscape"
            android:gravity="center"
            android:text="@string/commerce"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_smaller" />
    </GridLayout>

</RelativeLayout>